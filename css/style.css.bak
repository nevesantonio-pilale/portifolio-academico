@import url ('https://fonts.googleapis.com/css2? família=Montserrat:wght@100;400;700&display=swap');

* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
	font-family: 'Montserrat', sans-serif;
}

html {
	position: relative;
}

/* Estilização da area de Navegação */

nav {
	max-width: 100%;
	padding: 20px;
}

.container {
	width: 80%;
	height: 60px;
	margin: 0 auto;
}


.nav-bar {
	width: 100%;
	height: 60px;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.logo {
	width: 200px;
	height: 60px;
	display: flex;
	align-items: center;
	
}

.img-logo {
	width: 100%;
	height: 60px
}


.titulo-logo {
	width: 100%;
}

.logo h3 {
	color: #444444;
	text-transform: capitalize;
}

.logo img {
	width: 100%;
	height: 60px;
}


*.menu-nav {
	margin: 5px;
}

.menu-nav ul {
	list-style: none;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
}


.menu-nav ul li {
	padding: 10px;
}


.menu-nav ul li a {
	text-decoration: none;
	font-size: 14pt;
	text-transform: capitalize;
}
